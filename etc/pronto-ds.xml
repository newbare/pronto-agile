<?xml version="1.0" encoding="UTF-8"?>
<!-- arquivo de configuracao do banco de dados para o JBoss -->
<datasources>
	<local-tx-datasource>
		<jndi-name>pronto</jndi-name>
		<connection-url>jdbc:postgresql://localhost:5432/pronto</connection-url>
		<driver-class>org.postgresql.Driver</driver-class>
		<user-name>postgres</user-name>
		<password>postgres</password>
		<new-connection-sql>select 1</new-connection-sql>
		<metadata>
			<type-mapping>PostgreSQL 9.0</type-mapping>
		</metadata>
	</local-tx-datasource>
</datasources>
